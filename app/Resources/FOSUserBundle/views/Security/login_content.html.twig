{% block content %}  
{% trans_default_domain 'FOSUserBundle' %}    
<div class="gtco-section row">

    <div class="gtco-container">

        <div class="col-md-5 animate-box col-md-offset-3">
            {% if error %}
                <div class="col-md-12 alert alert-danger alert-dismissible" role="alert">
                    {{ error.messageKey|trans(error.messageData, 'security') }}</div>
                {% endif %}
            <!--<h3>Get In Touch</h3>-->
            <form action="{{ path("fos_user_security_check") }}" method="post">
                {% if csrf_token %}
                    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                {% endif %}
                <div class="row form-group">
                    <div class="col-md-12">
                        <label class="sr-only" for="username">{{ 'security.login.username'|trans }}</label>
                        <input placeholder="{{ 'security.login.username'|trans }}" class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />								
                    </div>					
                </div>

                <div class="row form-group">
                    <div class="col-md-12">							
                        <label class="sr-only" for="password">{{ 'security.login.password'|trans }}</label>
                        <input id="email" class="form-control" placeholder="{{ 'security.login.password'|trans }}" type="password" id="password" name="_password" required="required" />								
                    </div>
                </div>

                <div class="row form-group">
                    <div class="col-md-12">
                        <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        <label for="remember_me">{{ 'security.login.remember_me'|trans }}</label> <br/>  
                        <a style="line-height: 18px;" href="{{ path('fos_user_resetting_request') }}">Zapomniałeś hasła ?</a>
                    </div>
                </div>

                <div class="form-group">
                    <input class="btn btn-primary btn-lg" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />							
                </div>

            </form>		
        </div>
    </div>
</div>
 {% endblock content %}
