



<div style="position:relative; top: 40px;">
    {% if error %}
    <div>{{ error.message|trans({}, 'FOSUserBundle') }}</div>
{% endif %}
    <form id="form_2"  action="{{ path("fos_user_security_check") }}" method="post" class="form-horizontal" role="form">
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />


        <div class="form-group col-md-8">
            <div class="form-group col-md-4">
                <input class="form-control col-md-3"  type="text" id="username" name="_username"  value=""	
                   placeholder="{{ 'security.login.username'|trans({}, 'FOSUserBundle') }}" /> &nbsp; &nbsp;
            </div>
            <div class="form-group col-md-4">
                <input  class="form-control col-md-3" style="float:left;margin-left: 5px" type="password" id="password" name="_password" value=""  placeholder="Hasło:" /> &nbsp; &nbsp;
            </div>
            <div class="col-md-4">
                <input type="submit" class="btn btn-info"  id="_submit" name="_submit" value="{{ 'security.login.submit'|trans({}, 'FOSUserBundle') }}" />
            </div> 
        </div>

        <div class="form-group col-md-10" style="position:relative; bottom: 40px">    

            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label for="remember_me">{{ 'security.login.remember_me'|trans({}, 'FOSUserBundle') }}</label>
            <a style="line-height: 18px;" href="{{ path('fos_user_resetting_request') }}">Zapomniałeś hasła ?</a>
            <a style="line-height: 18px" href="#">Zarejestruj się</a>	

        </div>




    </form>
</div>

