{% extends "InfogoldAccountBundle:Default:index.html.twig" %}




{% block articletop %}

{% endblock %}
{% block articleleft %}
    {{ knp_menu_render('InfogoldAccountBundle:Builder:ustawieniaMenu') }}					
{% endblock articleleft %}


{% block articleright %}
    <div class="col-md-offset-4">




        <h1 style="text-align: center">Obsługa magazynu</h1>

        <table class="table  table-striped table-bordered table-hover table-condensed">

            <thead>
                <tr>


                    <th align="center" style="vertical-align: middle;text-align: center">Status</th>
                    <th align="center" style="vertical-align: middle;text-align: center">Zmień</th>
                </tr>
            </thead>
            <tbody>
                <tr> 

                    <td align="center" style="vertical-align: middle;">    {% if  magazyn.enableMagazyn == false  %} <span style="color: #FF4C4C">wyłączona</span> {% else %} <span style="color:#3e8f3e">włączona</span>    {% endif %}</td>
                    <td align="center" style="vertical-align: middle;">
                                {% if  magazyn.enableMagazyn == false  %}  
                            <form method="POST" action="{{ path('activate_magazyn', { 'id': magazyn.id }) }}" > <button type="submit" class="btn btn-success btn-sm"><span class="glyphicon glyphicon-ok"></span> &nbsp;&nbsp; Włącz</button></form>      
                                {% else %}
                            <form method="POST" action="{{ path('deactivate_magazyn', { 'id': magazyn.id }) }}" > <button type="submit" class="btn btn-danger btn-sm"><span class="glyphicon glyphicon-remove"></span>&nbsp;&nbsp; Wyłącz</button></form>      
                                {% endif %}
                    </td>
                </tr>

            </tbody>
        </table>





    </div>
{% endblock articleright %}


