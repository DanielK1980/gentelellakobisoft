                    {{ form_label(edit_form.peselklienta, 'Nr Pesel', { 'label_attr': {'class': ' col-md-4 control-label'} }) }}

                    <div class=" col-md-7" >
                        {{ form_widget(edit_form.peselklienta, { 'attr': {'class': 'form-control'} }) }}
                    </div>
                </div>
               
                        {{ form_errors(edit_form.peselklienta)  }}
                  
