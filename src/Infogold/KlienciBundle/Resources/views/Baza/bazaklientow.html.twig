    {% endblock %}
{% block articletop %}
{% endblock articletop %}
{% block articleleft %}
{% endblock articleleft %}
{% block articleright %}


    <h2>Baza klientów indywidualnych </h2>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                    <li data-toggle="tooltip" data-placement="auto" title="Klienci indywidualni dodani przez Ciebie"><a  href="{{ path('klienci') }}"><span class="fa fa-user fa-lg"></span></a></li>
                    <li  data-toggle="tooltip" data-placement="auto" title="Klienci firmowi dodani przez Ciebie"><a href="{{ path('klienci_firmowi') }}"><span class="fa fa-building fa-lg"></span></a></li>
                    <li class="active"><a data-toggle="tooltip" data-placement="auto" title="Baza klientów indywidualnych"  href="{{ path('klienci_all_ind') }}" class="navbar-brand" ><span class="fa fa-users fa-lg"></span></a></li>
                    <li><a data-toggle="tooltip" data-placement="auto" title="Baza klientów firmowych"  href="{{ path('klienci_all_firma') }}"><span class="fa fa-industry fa-lg"></span></a></li>                 
                  
                </ul>
                    
                   

                <form class="navbar-form navbar-left" role="search" action="{{ path('szukajindywidualnych') }}" method="post" {{ form_enctype(form) }}>
                    {{ form_errors(form) }} 
                    <div class="form-group">
                        {{ form_widget(form.konsultant , { 'attr': {'minlength': '4','class': 'form-control'} }) }}

                    </div>
                    <div class="form-group">
                        {{ form_widget(form.szukaj , { 'attr': {'minlength': '4','class': 'form-control', 'placeholder':'Szukaj'} }) }}

                    </div>
                    <button type="submit" class="btn btn-default" data-toggle="tooltip" title="Możesz wyszukiwać po nr PESEL, nazwisku, imieniu i nazwisku oraz po nr klienta."><span class="glyphicon glyphicon-search"></span> Szukaj</button>
                    {{ form_rest( form ) }}
                </form>
                <ul class="nav navbar-nav navbar-right">
                    <li> <a style="color:white !important" class="btn-success" href="{{ path('klienci_baza_new') }}"><span class="glyphicon glyphicon-plus"></span> Dodaj</a></li>

                </ul>
            </div><!-- /.navbar-collapse -->

        </div><!-- /.container-fluid -->
    </nav>

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-info" role="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table class="table  table-striped table-bordered table-hover table-condensed">
        <thead>
            <tr>
                <th>Id</th>
                <th style="white-space:nowrap">Nr. Klienta</th> 
                <th>Imie</th>
                {% if  pagination is defined  %}    <th {% if pagination.isSorted('p.nazwisko') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Nazwisko', 'p.nazwisko') }}</th> {% else %} <th>Nazwisko</th>  {% endif %}
                <th>Adres</th>
                <th>Telefon</th>            
                {% if  pagination is defined  %}    <th{% if pagination.isSorted('p.peselklienta') %} class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Pesel', 'p.peselklienta') }}</th> {% else %} <th>Pesel</th>     {% endif %}                                     
                {% if  pagination is defined  %}    <th{% if pagination.isSorted('p.created') %}  class="sorted"{% endif %}>{{ knp_pagination_sortable(pagination, 'Utworzony', 'p.created') }}</th>   {% else %} <th>Utworzony</th>   {% endif %}      
                <th colspan="2">Pokaż</th><th>Edytuj</th>

        </thead>
        <tbody>

            {% if  pagination is defined  %}  
                {% for entity in pagination %}
                    

                        <tr>
                            <td style="vertical-align: middle;"><a href="{{ path('klienci_baza_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td style="vertical-align: middle;">{{ entity.numerklienta }}</td>   
                            <td style="vertical-align: middle;">{{ entity.imie }}</td>
                            <td style="vertical-align: middle;">{{ entity.nazwisko }}</td>
                            <td>{{ entity.ulica }} {{ entity.nrdomu }} {% if entity.nrmieszkania %}/ {{ entity.nrmieszkania }}{% endif %} <br/> {{ entity.kodpocztowy }} {{ entity.miasto }} {{ entity.wojewodztwo }}  </td>
                            <td style="vertical-align: middle;">{{ entity.telefonklienta }}</td>

                            <td style="vertical-align: middle;">{{ entity.peselklienta }}</td>                           
                            <td style="vertical-align: middle;">{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s')}}<br/> przez <b>{% if entity.KlientKonsultanta %} {{ entity.KlientKonsultanta}} </b>{% else %} administratora{% endif %}{% endif %}</td>

                            <td align="center" style="vertical-align: middle;" colspan="2">

                                <a class="btn btn-default btn-sm" href="{{ path('klienci_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>

                            </td><td align="center" style="vertical-align: middle;">

                                <a class="btn btn-default btn-sm" href="{{ path('klienci_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>


                            </td>
                        </tr>

                  
                {% endfor %}
            {% else %}
                {% for entity in entities %}
                   
                        <tr>
                            <td style="vertical-align: middle;"><a href="{{ path('klienci_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                            <td style="vertical-align: middle;">{{ entity.numerklienta }}</td>   
                            <td style="vertical-align: middle;">{{ entity.imie }}</td>
                            <td style="vertical-align: middle;">{{ entity.nazwisko }}</td>
                            <td>{{ entity.ulica }} {{ entity.nrdomu }} {% if entity.nrmieszkania %}/ {{ entity.nrmieszkania }}{% endif %} <br/> {{ entity.kodpocztowy }} {{ entity.miasto }} {{ entity.wojewodztwo }}  </td>
                            <td style="vertical-align: middle;">{{ entity.telefonklienta }}</td>

                            <td style="vertical-align: middle;">{{ entity.peselklienta }}</td>                           
                            <td style="vertical-align: middle;">{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s')}}<br/> przez <b>{% if entity.KlientKonsultanta %} {{ entity.KlientKonsultanta}} </b>{% else %} administratora{% endif %}{% endif %}</td>

                            <td align="center" style="vertical-align: middle;" colspan="2">

                                <a class="btn btn-default btn-sm" href="{{ path('klienci_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>

                            </td><td align="center" style="vertical-align: middle;">

                                <a class="btn btn-default btn-sm" href="{{ path('klienci_baza_edit', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>


                            </td>
                        </tr>


                    
                {% endfor %}
            {% endif %}
        </tbody>
    </table>
    {% if app.request.get('_route') == 'klienci_all_ind' %}
        {% if  pagination is defined %}
            <div class="navigation">
                {{ knp_pagination_render(pagination) }}
            </div>
        {% endif %}
    {% endif %}
{% endblock articleright %}

