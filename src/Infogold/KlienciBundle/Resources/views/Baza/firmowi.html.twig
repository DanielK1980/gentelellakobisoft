{% extends "InfogoldAccountBundle:Default:index.html.twig" %}

{% block articletop %}
{% endblock articletop %}
{% block articleleft %}
{% endblock articleleft %}
 {% block articleright %}


<h1>Klienci firmowi  </h1>

<table class="table  table-striped table-bordered table-hover table-condensed">
  
        {% for entity in entities %}
             {% if entity.nipklienta %} 
                <tbody>
                    <tr class="info"> <th style="white-space:nowrap">Nr. klienta</th> <td>{{ entity.numerklienta }}</td><th  style="white-space:nowrap">Nazwa Firmy</th>  <td  colspan="6">{{ entity.nazwaklienta }}</td> </tr>
                    <tr> <th style="white-space:nowrap">Adres</th>  <td colspan="8">{{ entity.ulica }} {{ entity.nrdomu }} / {% if entity.nrmieszkania %} {{ entity.nrmieszkania }}{% endif %}  ,  {{ entity.kodpocztowy }} {{ entity.miasto }} ,  Województwo: {{ entity.wojewodztwo }}  </td></tr>
                    <tr>
                        <th>Telefon</th>
                        <th>Email</th>
                        <th>Nip</th> 
                        <th>Regon</th>              
                        <th>Imie</th>
                        <th>Nazwisko</th>               
                        <th>Utworzony</th>
                        <th>Zmodyfikowany</th>
                        <th>Szczegóły/edycja</th>
                    </tr>
                    <tr>




                        <td>{{ entity.telefonklienta }}</td>
                        <td>{{ entity.emailklienta }}</td>  
                         <td>{{ entity.nipklienta }}</td> 
                        <td>{{ entity.regonklienta }}</td>                                 
                        <td>{{ entity.imie }}</td>
                        <td>{{ entity.nazwisko }}</td>              
                        <td>{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>{% if entity.updated %}{{ entity.updated|date('Y-m-d H:i:s') }}{% endif %}</td>
                        <td>
                            <ul>
                                <li>
                                    <a href="{{ path('klienci_baza_show', { 'id': entity.id }) }}">show</a>
                                </li>
                                <li>
                                    <a href="{{ path('klienci_baza_editfirmowy', { 'id': entity.id }) }}">edit</a>
                                </li>
                            </ul>
                        </td>
                    </tr>

                {% endif %}
        {% endfor %}
    </tbody>
</table>

<ul>
    <li>
        <a href="{{ path('klienci_baza_new_firmowy') }}" class="btn btn-primary">
            Create a new entry
        </a>
    </li>
</ul>

