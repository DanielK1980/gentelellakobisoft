
{% extends "InfogoldKonsultantBundle:Default:index.html.twig" %}

{% block articletop %}
{% endblock articletop %}
{% block articleleft %}
{% endblock articleleft %}
{% block articleright %}


    <h2>Baza klientów firmowych</h2>

    <nav class="navbar navbar-default" role="navigation">
        <div class="container-fluid">
            <!-- Brand and toggle get grouped for better mobile display -->
         

            <!-- Collect the nav links, forms, and other content for toggling -->
            <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                <ul class="nav navbar-nav">
                   <li><a class="small" href="{{ path('klienci') }}"><span class="fa fa-user fa-lg"></span></a></li>
                  <li><a  class="small" href="{{ path('klienci_firmowi') }}"><span class="fa fa-building fa-lg"></span></a></li>
                    <li><a class="small" href="{{ path('klienci_all_ind') }}" class="navbar-brand" ><span class="fa fa-users fa-lg"></span></a></li>
                    <li class="active"><a class="small" href="{{ path('klienci_all_firma') }}"><span class="fa fa-industry fa-lg"></span></a></li>                 

                </ul>
                <form class="navbar-form navbar-left" role="search" action="{{ path('szukajfirmowych') }}" method="post" {{ form_enctype(form) }}>
                    {{ form_errors(form) }} 
                    <div class="form-group">
                        {{ form_widget(form.konsultant , { 'attr': {'minlength': '4','class': 'form-control'} }) }}

                    </div>
                    <div class="form-group">
                        {{ form_widget(form.szukaj , { 'attr': {'minlength': '4','class': 'form-control', 'placeholder':'Szukaj'} }) }}

                    </div>
                    <button type="submit" class="btn btn-default" data-toggle="tooltip" title="Wyszukiwanie po nr NIP, REGON, Nr klienta, nazwie"><span class="glyphicon glyphicon-search"></span> Szukaj</button>
                    {{ form_rest( form ) }}
                </form>
                   <ul class="nav navbar-nav navbar-right">
                    <li> <a style="color:white !important" class="btn-success" href="{{ path('klienci_new_firmowy') }}"><span class="fa fa-user-plus fa-lg"></span> Dodaj</a></li>
                   


                </ul>
     
            </div><!-- /.navbar-collapse -->
        </div><!-- /.container-fluid -->
    </nav>

    {% for flashMessage in app.session.flashbag.get('error') %}
        <div class="alert alert-info" role="alert">
            <button type="button" class="close" data-dismiss="alert">&times;</button>
            {{ flashMessage }}
        </div>
    {% endfor %}

    <table class="table  table-striped table-bordered table-hover table-condensed">

        <thead>
            <tr>
                <th>Id</th>
                <th style="white-space:nowrap">Nr. Klienta</th> 
                <th>Nazwa</th>
                <th>Adres</th> 
                <th>NIP</th>
                <th>REGON</th>


                <th>Utworzony</th>

                <th colspan="2">Pokaż</th><th>Edytuj</th>

        </thead>
        <tbody>
            
              {% if  pagination is defined  %}  
            {% for entity in pagination %}
                {% if entity.nipklienta %} 
                    <tr>
                        <td style="vertical-align: middle;"><a href="{{ path('klienci_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td style="vertical-align: middle;">{{ entity.numerklienta }}</td> 
                        <td style="vertical-align: middle;">{{ entity.nazwaklienta }}</td>
                        <td>{{ entity.ulica }} {{ entity.nrdomu }} {% if entity.nrmieszkania %}/ {{ entity.nrmieszkania }}{% endif %} <br/> {{ entity.kodpocztowy }} {{ entity.miasto }} {{ entity.wojewodztwo }} </td>
                        <td style="vertical-align: middle;">{{ entity.nipklienta }}</td>  
                        <td style="vertical-align: middle;">{{ entity.regonklienta }}</td>  
                        <td style="vertical-align: middle;">{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s')}}<br/> przez <b>{% if entity.KlientKonsultanta %} {{ entity.KlientKonsultanta}} </b>{% else %} administratora{% endif %}{% endif %}</td>

                        <td align="center" style="vertical-align: middle;" colspan="2">

                            <a class="btn btn-default btn-sm" href="{{ path('klienci_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>

                        </td><td align="center" style="vertical-align: middle;">

                            <a class="btn btn-default btn-sm" href="{{ path('klienci_editfirmowy', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>


                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
              {% else %}
                   {% for entity in entities %}
                {% if entity.nipklienta %} 
                    <tr>
                        <td style="vertical-align: middle;"><a href="{{ path('klienci_show', { 'id': entity.id }) }}">{{ entity.id }}</a></td>
                        <td style="vertical-align: middle;">{{ entity.numerklienta }}</td> 
                        <td style="vertical-align: middle;">{{ entity.nazwaklienta }}</td>
                        <td>{{ entity.ulica }} {{ entity.nrdomu }} {% if entity.nrmieszkania %}/ {{ entity.nrmieszkania }}{% endif %} <br/> {{ entity.kodpocztowy }} {{ entity.miasto }} {{ entity.wojewodztwo }} </td>
                        <td style="vertical-align: middle;">{{ entity.nipklienta }}</td>  
                        <td style="vertical-align: middle;">{{ entity.regonklienta }}</td>  
                        <td style="vertical-align: middle;">{% if entity.created %}{{ entity.created|date('Y-m-d H:i:s')}}<br/> przez <b>{% if entity.KlientKonsultanta %} {{ entity.KlientKonsultanta}} </b>{% else %} administratora{% endif %}{% endif %}</td>

                        <td align="center" style="vertical-align: middle;" colspan="2">

                            <a class="btn btn-default btn-sm" href="{{ path('klienci_show', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-eye-open"></span></a>

                        </td><td align="center" style="vertical-align: middle;">

                            <a class="btn btn-default btn-sm" href="{{ path('klienci_editfirmowy', { 'id': entity.id }) }}"><span class="glyphicon glyphicon-pencil"></span></a>


                        </td>
                    </tr>
                {% endif %}
            {% endfor %}
            {% endif %}
    </table>
     {% if app.request.get('_route') == 'klienci_all_firma' %}
       {% if  pagination is defined %}
    <div class="navigation" style="float: none !important;
    display: block;
    margin-left: auto;
    margin-right: auto;
    width: 250px">
        {{ knp_pagination_render(pagination) }}
    </div>
    {% endif %}
     {% endif %}
{% endblock articleright %}

{% block footer %}
{% endblock footer %}